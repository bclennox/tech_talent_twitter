<div class="page-header">
  <h1><%= @user.handle %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default user-tweets">
      <div class="panel-heading">
        <h3 class="panel-title">Recent Tweets</h3>
      </div>

      <div class="panel-body">
        <ul class="tweets list-unstyled">
          <%= render @user.recent_tweets %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default user-profile">
      <div class="panel-heading">
        <h3 class="panel-title">Profile</h3>
      </div>

      <div class="panel-body">
        <dl>
          <dt>Name</dt>
          <dd><%= @user.name %></dd>

          <dt>Email</dt>
          <dd><%= @user.email %></dd>

          <dt>Location</dt>
          <dd><%= @user.location %></dd>

          <dt>Tweets</dt>
          <dd><%= @user.tweets.count %></dd>

          <dt>Favorites</dt>
          <dd><%= @user.favorites.count %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
